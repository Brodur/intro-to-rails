<div class="container">
  <div class="card">
    <h5 class="card-header"><%= @planet.name %></h5>
    <div class="card-body">
      <% unless @planet.climates.count == 0 &&  @planet.terrains.count == 0 %>
        <h5 class="card-title">Geography</h5>
        <% unless @planet.climates.count == 0 %>
          <p class="card-text"><%= 'Climate'.pluralize(@planet.climates.count) %>: <%= @planet.climates_list %></p>
        <% end %>
        <% unless @planet.terrains.count == 0 %>
          <p class="card-text"><%= 'Terrain'.pluralize(@planet.terrains.count) %>: <%= @planet.terrains_list %></p>
        <% end %>
      <% end %>
    </div>
    <% if @planet.films.count > 0 %>
      <h5 class="card-header">Featured in films</h5>
      <ul class="list-group list-group-flush">
        <% @planet.films.each do |film| %>
          <li class="list-group-item"><%= link_to film.title, film %></li>
        <% end %>
      </ul>
    <% end %>
    <% if @planet.species.count > 0 %>
      <h5 class="card-header">Species</h5>
      <ul class="list-group list-group-flush">
        <% @planet.species.each do |sp| %>
          <li class="list-group-item"><%= link_to sp.name, sp %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="card-body">
    <%= link_to 'All Planets', planets_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>